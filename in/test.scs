Sprite vert {
    Costume costume1 "../res/bcf454acf82e4504149f7ffe07081dbc.svg";
}

Sprite horiz {
    Costume costume1 "../res/bcf454acf82e4504149f7ffe07081dbc.svg";
}

vert.onFlag {
    @initialize;
}

horiz.onFlag {
    @initialize;
}

vert.onKeyPress : UpArrow {
    @point 0;
    @walk 30;
}

vert.onKeyPress : DownArrow {
    @point 180;
    @walk 30;
}

horiz.onKeyPress : LeftArrow {
    @point 270;
    @walk 30;
}

horiz.onKeyPress : RightArrow {
    @point 90;
    @walk 30;
}
